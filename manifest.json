{
  "manifest_version": 3,
  "name": "FlowMate",
  "version": "1.0.0",
  "description": "Salesforce cleanup + Five9 ASM controls with a React popup.",
  "action": {
    "default_title": "FlowMate",
    "default_popup": "popup/index.html"
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "permissions": ["tabs", "activeTab", "scripting"],
  "host_permissions": [
    "*://*.lightning.force.com/*",
    "*://*.my.salesforce.com/*",
    "*://app.five9.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.lightning.force.com/*",
        "*://*.my.salesforce.com/*",
        "*://app.five9.com/*"
      ],
      "js": ["content/entry.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "content/*", "popup/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
